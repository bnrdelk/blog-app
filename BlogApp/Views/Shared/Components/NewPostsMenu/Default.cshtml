@model List<Post>

<div class="bg-white p-4">
    <h6 class="mb-3 fw-bold">Newest posts</h6>
    @foreach(var p in Model)
    {
    <div class="card bg-transparent border-0 mb-3">
        <div class="row">
            <div class="col-9">
                <p><a href="" class="btn btn-link text-decoration-none text-dark fw-bold">@p.Title</a></p>
                <p>@p.Content</p>
            </div>
            <div class="col-3">
                <img src="~/img/@p.Image" class="img-fluid" alt="@p.Title's Image">
            </div>
        </div>
    </div>
    <hr class="my-1">
    }
</div>