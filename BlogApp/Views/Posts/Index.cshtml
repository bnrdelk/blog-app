@model PostsViewModel

<div class="row">
    <div class="col-lg-9">
        <div class="bg-white p-4">
            <h1 class="h2 mb-3 fw-bold">Popular posts on bloggie</h1>
            @foreach(var p in Model.Posts)
            {
                <div class="card bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="col-10">
                            <h5><a href="/posts/@p.Url" class="btn btn-link text-decoration-none text-dark fw-bold">@p.Title</a></h5>
                            <p>@p.Content</p>
                        </div>
                        <div class="col-2">
                            <img src="~/img/@p.Image" class="img-fluid" alt="@p.Title's Image">
                        </div>
                    </div>
                </div>
                <hr class="my-3">
            }
            <nav>
                <ul class="pagination">
                    <li class="page-item"><a href="" class="page-link">1</a></li>
                    <li class="page-item"><a href="" class="page-link">2</a></li>
                    <li class="page-item"><a href="" class="page-link">3</a></li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="col-lg-3">
        @await Component.InvokeAsync("TagsMenu");
        @await Component.InvokeAsync("NewPostsMenu");
    </div>
</div>


